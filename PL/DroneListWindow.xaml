<Window x:Class="PL.DroneListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Title="Your Drones" Height="450" Width="800" MouseDown="Window_MouseDown">

    <Grid RenderTransformOrigin="0.53,0.556">
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="325*"/>
        </Grid.RowDefinitions>
        <Grid Margin="0,74,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="DronesListView" Margin="0,-18,0,0" Grid.ColumnSpan="2" MouseDoubleClick="DronesListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="130"/>
                        <GridViewColumn Header="MODEL" DisplayMemberBinding="{Binding Model}" Width="140"/>
                        <GridViewColumn Header="WEIGHT" DisplayMemberBinding="{Binding MaxWeight}" Width="100"/>
                        <GridViewColumn Header="BATTERY" DisplayMemberBinding="{Binding Battery}" Width="100"/>
                        <GridViewColumn Header="STATUS" DisplayMemberBinding="{Binding Status}" Width="130"/>
                        <GridViewColumn Header="LOCATION" DisplayMemberBinding="{Binding CurrentLocation}" Width="190"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="DRONES" FontSize="25"  Grid.Column="0" Margin="24,10,0,10" HorizontalAlignment="Left" FontWeight="Bold"/>
            <ComboBox x:Name="StatusSelector" ToolTip="Select status" HorizontalAlignment="Left" Width="100" Grid.Column="1" SelectionChanged="StatusSelector_SelectionChanged" Margin="10,11,0,9" Height="30"/>
            <Label x:Name="statusLabel" Content="Status" HorizontalAlignment="Left" FontSize="13" Margin="9,14,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1"/>
            <ComboBox x:Name="WeightSelector" ToolTip="Select weight" HorizontalAlignment="Left" Width="100" SelectionChanged="WeightSelector_SelectionChanged" Margin="10,11,0,9" Grid.Column="2" Height="30" />
            <Label x:Name="weightLabel" Content="Weight" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Width="62" Grid.Column="2" Margin="10,0,0,0" />
            <Button x:Name="btnAddDrone" Content="New Drone" Click="btnAddDrone_Click" Margin="67,13,0,11" Grid.Column="3" RenderTransformOrigin="5.244,0.639"  Height="40" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
            <Button x:Name="btnClose" Content="X" Opacity="1" Grid.Column="5" HorizontalAlignment="Left" Margin="80,-4,0,0" VerticalAlignment="Top" Height="41" Width="53" RenderTransformOrigin="1.272,0.316" FontWeight="Bold" Background="{x:Null}" Foreground="Black" BorderThickness="1" BorderBrush="Black" Click="btnClose_Click"/>
            <Label Content="Filter"  HorizontalAlignment="Center" Margin="0,-5,0,0" VerticalAlignment="Top" Height="26" Grid.Column="1"/>
            <Button x:Name="btnClearWeightSelection" Grid.Column="3" Content="Clear" HorizontalAlignment="Left" Margin="28,22,0,0" VerticalAlignment="Top" Click="btnClearWeightSelection_Click" Height="26"/>
            <Button x:Name="btnClearStatusSelection" Content="Clear"  HorizontalAlignment="Left" Margin="57,10,0,0" VerticalAlignment="Top" Click="btnClearStatusSelection_Click" Grid.Column="3" Width="66"/>
            <Button x:Name="btnClearAllSelections" Content="Clear All"  HorizontalAlignment="Left" Margin="126,9,0,0" VerticalAlignment="Top" Click="btnClearAllSelections_Click" Grid.Column="2" Width="97" Grid.ColumnSpan="2"/>
        </Grid>

    </Grid>
</Window>
