<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="503" Width="778" MouseDown="Window_MouseDown">
    <Grid Margin="0,0,36,0">
        <Grid x:Name="AddGrid" Height="450" Grid.Row="0" Margin="222,34,90,19" Background="White">
            <Label Content="New Drone" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="ID" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" FontSize="15"/>
            <TextBox x:Name="droneId" Text="Enter ID here" PreviewTextInput="numbersOnly" MaxLength="4" GotFocus="idTbGotFocus" HorizontalAlignment="Left" Margin="50,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Foreground="#FFABADB3" Height="18" TextChanged="droneId_TextChanged" BorderBrush="#FFABADB3"/>
            <Label x:Name="RedMes1" Content=" " HorizontalAlignment="Left" Margin="228,126,0,0" VerticalAlignment="Top" Foreground="#FFF30101" RenderTransformOrigin="-0.019,-0.478"/>
            <Label Content="Model" HorizontalAlignment="Left" Margin="50,148,0,0" VerticalAlignment="Top" FontSize="15"/>
            <TextBox x:Name="droneModel" Text="Enter model here" GotFocus="modelTbGotFocus" MaxLength="5" HorizontalAlignment="Left" Margin="50,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Foreground="#FFABADB3" Height="18" TextChanged="droneModel_TextChanged"/>
            <Label x:Name="RedMes2" Content=" " HorizontalAlignment="Left" Margin="228,174,0,0" VerticalAlignment="Top" Foreground="#FFF30101" RenderTransformOrigin="-0.256,0.601"/>
            <Label Content="Select Maximum Weight" HorizontalAlignment="Left" Margin="50,196,0,0" VerticalAlignment="Top" FontSize="15"/>
            <ComboBox x:Name="droneMaxWeight" ToolTip="Select" HorizontalAlignment="Left" Margin="50,226,0,0" VerticalAlignment="Top" Width="182" BorderBrush="White" Foreground="Black" SelectionChanged="droneMaxWeight_SelectionChanged">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
            <Label Content="Select Station To Charge" HorizontalAlignment="Left" Margin="50,248,0,0" VerticalAlignment="Top" FontSize="15"/>
            <ComboBox x:Name="droneStation" HorizontalAlignment="Left" Margin="50,278,0,0" VerticalAlignment="Top" Width="182" SelectionChanged="droneStation_SelectionChanged"/>
            <Button x:Name="btnOK" Content="OK" IsEnabled="False" HorizontalAlignment="Left" Margin="102,327,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.462,-1.401" Click="btnOK_Click" BorderBrush="#FF155DB4" BorderThickness="2,2,2,2" ClipToBounds="True"/>
            <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="115,359,0,0" VerticalAlignment="Top" Width="52" Click="btnCancel_Click"/>
        </Grid>
        <Grid x:Name="ActionGrid" Height="auto" Grid.Row="0" Width="auto" Margin="10,0,0,19" Background="White">
            <Label Content="Update Drone" FontSize="20" HorizontalAlignment="Left" Margin="309,29,0,0" VerticalAlignment="Top"/>
            <Label x:Name="id" Content="ID:" FontSize="15" HorizontalAlignment="Left" Margin="23,73,0,0" VerticalAlignment="Top" Height="43" Width="74"/>
            <Label x:Name="idToPrint" Content="1" FontSize="15" HorizontalAlignment="Left" Margin="94,73,0,0" VerticalAlignment="Top" Width="169"/>
            <Label x:Name="model" Content="Model:" FontSize="15" HorizontalAlignment="Left" Margin="23,121,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.519,0.401"/>
            <TextBox x:Name="modelToPrint" FontSize="15" MaxLength="5" HorizontalAlignment="Left" Margin="94,125,0,0" Text="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" TextChanged="modelToPrint_TextChanged" Background="{x:Null}"/>
            <Label x:Name="RedMes3" Content=" " HorizontalAlignment="Left" Margin="94,147,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.332,0.331" Height="32" Foreground="#FFFA0606" Width="193"/>
            <Label x:Name="maxWeight" Content="Maximum weight:" FontSize="15" HorizontalAlignment="Left" Margin="21,168,0,0" VerticalAlignment="Top" Background="{x:Null}"/>
            <Label x:Name="maxWeightToPrint" Content="3" FontSize="15" HorizontalAlignment="Left" Margin="149,168,0,0" VerticalAlignment="Top" Width="110" Foreground="Black"/>
            <Label x:Name="battery" Content="Battery:" FontSize="15" HorizontalAlignment="Left" Margin="21,222,0,0" VerticalAlignment="Top"/>
            <Label x:Name="batteryToPrint" Content="4" FontSize="15" HorizontalAlignment="Left" Margin="96,222,0,0" VerticalAlignment="Top" Width="169"/>
            <Label x:Name="status" Content="Status:" FontSize="15" HorizontalAlignment="Left" Margin="23,271,0,0" VerticalAlignment="Top"/>
            <Label x:Name="statusToPrint" Content="5" FontSize="15" HorizontalAlignment="Left" Margin="95,271,0,0" VerticalAlignment="Top" Width="169"/>
            <Label x:Name="location" Content="Location:" FontSize="15" HorizontalAlignment="Left" Margin="23,322,0,0" VerticalAlignment="Top"/>
            <Label x:Name="locationToPrint" Content="6" FontSize="15" HorizontalAlignment="Left" Margin="96,322,0,0" VerticalAlignment="Top" Width="298"/>
            <Button x:Name="btnClose" Content="Done" HorizontalAlignment="Center" Margin="0,416,0,0" VerticalAlignment="Top" Click="btnClose_Click" Width="58"/>
            <Button x:Name="btnUpdate" Content="√" HorizontalAlignment="Left" Margin="362,125,0,0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.51,1.388" Height="22" Click="btnUpdate_Click"/>
            <Button x:Name="btnCharge" Content="Charge" HorizontalAlignment="Left" Margin="351,227,0,0" VerticalAlignment="Top" Click="btnCharge_Click"/>
            <Button x:Name="btnReleaseCharge" Content="Release Charge" HorizontalAlignment="Left" Margin="300,227,0,0" VerticalAlignment="Top" Click="btnReleaseCharge_Click" Width="93" RenderTransformOrigin="0.462,1.703"/>
            <Button x:Name="btnDroneToDelivery" Content="Send for delivery" HorizontalAlignment="Left" Margin="300,276,0,0" VerticalAlignment="Top" Click="btnDroneToDelivery_Click"/>
            <Button x:Name="btnDronePickUp" Content="Pick up parcel" HorizontalAlignment="Left" Margin="521,370,0,0" VerticalAlignment="Top" Click="btnDronePickUp_Click" Width="94"/>
            <Button x:Name="btnDroneDeliver" Content="Deliver parcel" HorizontalAlignment="Left" Margin="521,370,0,0" VerticalAlignment="Top" Click="btnDroneDeliver_Click" Width="92"/>
            <Expander x:Name="parcelExpander" Header="Parcel in shipping" FontSize="15" HorizontalAlignment="Left" Height="281" Margin="442,84,0,0" VerticalAlignment="Top" Width="252">
                <Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Stretch">
                            <Label Content="ID:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Picked up:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Priority:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Weight:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Sender:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Reciever:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Delivery distance:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Pick up location:" FontSize="11" HorizontalAlignment="Left"/>
                            <Label Content="Delivery location:" FontSize="11" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel x:Name="parcelStackPanel" Grid.Column="1">
                            <Label x:Name="parcelId" Content="0" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="isPickedUp" Content="1" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="priority" Content="2" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="weight" Content="3" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="senderName" Content="4" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="targetName" Content="5" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="deliveryDistance" Content="8" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="pickUpLocation" Content="6" FontSize="11" HorizontalAlignment="Right"/>
                            <Label x:Name="deliveryLocation" Content="7" FontSize="11" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Expander>
        </Grid>
    </Grid>
</Window>
