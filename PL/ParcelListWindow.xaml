<Window x:Class="PL.ParcelListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"   ResizeMode="NoResize" WindowStyle="None"
        Title="ParcelListWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="375*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <ListView x:Name="ParcelsListView" Grid.ColumnSpan="3">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                        <GridViewColumn Header="SENDER NAME" DisplayMemberBinding="{Binding SenderName}" Width="150"/>
                        <GridViewColumn Header="TARGET NAME" DisplayMemberBinding="{Binding TargetName}" Width="150"/>
                        <GridViewColumn Header="WEIGHT" DisplayMemberBinding="{Binding Weight}" Width="80"/>
                        <GridViewColumn Header="PRIORITY" DisplayMemberBinding="{Binding Priority}" Width="80"/>
                        <GridViewColumn Header="STATE" DisplayMemberBinding="{Binding State}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Label Content="PARCELS" FontSize="25"  Grid.Column="0" Margin="24,10,0,10" HorizontalAlignment="Left" FontWeight="Bold"/>
            <Button x:Name="btnAddParcel" ToolTip="Click to add a new drone"  Content="+" Background="LightGray" Foreground="Black" Opacity="0.5" FontSize="70" HorizontalAlignment="Left" Width="96" Click="btnAddParcel_Click" Grid.Column="3" Margin="125,306,0,-341" RenderTransformOrigin="1.481,0.474" Grid.ColumnSpan="2">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="60"/>
                    </Style>
                </Button.Resources>
            </Button>
            <ComboBox x:Name="name" Margin="0,11,0,9" Grid.Column="1" HorizontalAlignment="Center" Width="140"/>
        </Grid>
    </Grid>
</Window>
